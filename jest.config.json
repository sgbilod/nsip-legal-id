{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["json", "lcov", "text", "clover"],
    "moduleFileExtensions": ["ts", "js"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
        "ts-jest": {
            "tsconfig": "tsconfig.json"
        }
    }
}
